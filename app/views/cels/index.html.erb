

<div class="col-md-12 text-center">
  <h3>Listado Cels</h3>
  <br><br>
</div>

<br>

<table id="projects_table" class="table table-striped table-hover " style="margin-top: 20px">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Pais</th>
      <th>Acciones</th>


      <th></th>
    </tr>

  </thead>
  <tbody>
    <% @cels.each do |cel| %>
      <tr>

        <td><%= cel.id %></td>
        <td><%= cel.nombre.titleize %></td>
        <td><%= "#{(rand(60) + 10)}-#{rand(9000000) + 1000000000}" %></td>
        <td><%= cel.pais.nombre.titleize %></td>

        <!-- ACCIONES SEGUN PERFIL -->
          <% if @current_user.es_cem? %>
            <td>
              <a href="/cels/<%= cel.id %>" data-method="DELETE" class="btn btn-danger btn-sm">Eliminar</a>
              <a href="/cels/<%= cel.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
              <a href="/cels/<%= cel.id %>" class="btn btn-info btn-sm ">Ver</a>
            </td>
          <% elsif @current_user.es_familia? %>
            <td>
              <a href="/cels/<%= cel.id %>" class="btn btn-info btn-sm btn-block ">Ver</a>
            </td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br><br><br><br><br>



