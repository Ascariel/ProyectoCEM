

<div class="col-md-12 text-center">
  <h3>Listado de Programas de Estudio</h3>
  <br><br>
</div>

<% if @current_user&.es_cem? %>
  <div class="col-md-12">
    <a href="/programa_estudio/new" class="btn btn-success btn-sm float-left">Ingresar Nuevo Programa</a>
  </div>
<% end %>

<br>

<table id="projects_table" class="table table-striped table-hover " style="margin-top: 20px">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre Programa</th>
      <th>Pais</th>
      <th>Duracion</th>
      <th>Cupos Max</th>
      <th>Cupos Min</th>
      <th>Cursos Incluidos</th>


      <th></th>
    </tr>

  </thead>
  <tbody>
    <% ProgramaEstudio.all.each do |programa| %>
      <tr>
        <td><%= programa.id %></td>
        <td><%= programa.nombre.titleize %></td>
        <td><%= programa.pais.nombre.titleize %></td>
        <td><%= programa.duracion.upcase %></td>
        <td><%= programa.max_cupos %></td>
        <td><%= programa.min_cupos %></td>
        <td>
          <select class="form-control" name='pais_id'>
            <option selected >Cursos Asociados</option>
            <% programa.programa_cursos.each do |programa_curso| %>
              <option><%= programa_curso.curso.nombre.titleize %></option>
            <% end %>
          </select>
        </td>
        <td>
<!--           <a href="/programas/<%= programa.id %>" data-method="DELETE" class="btn btn-danger btn-sm">Eliminar</a>
          <a href="/programas/edit/<%= programa.id %>" class="btn btn-warning btn-sm">Editar</a> -->
          <a href="/programa_estudio/<%= programa.id %>/show" class="btn btn-info btn-sm btn-block">Ver</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br><br><br><br><br>



