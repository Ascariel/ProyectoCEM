          <a href="/programas/edit/<%= programa.id %>" class="btn btn-warning btn-sm">Editar</a> -->
          <a href="/programas_estudio/<%= programa.id %>" class="btn btn-info btn-sm btn-block">Ver</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

