

<div class="col-md-12 text-center">
  <h3>Alumnos</h3>
  <br><br>
</div>

<br>

<table id="projects_table" class="table table-striped table-hover " style="margin-top: 20px">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>CodigoAlumno</th>
      <th>Edad</th>
      <th>Acciones</th>


      <th></th>
    </tr>

  </thead>
  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>

        <td><%= alumno.id %></td>
        <td><%= alumno.nombre.titleize %></td>
        <td><%= alumno.apellido.titleize %></td>
        <td><%= alumno.codigo_alumno.upcase %></td>
        <td><%= alumno.edad%></td>

        <!-- ACCIONES SEGUN PERFIL -->
          <% if @current_user.es_cem? %>
            <td>
              <a href="/alumnos/<%= alumno.id %>" data-method="DELETE" class="btn btn-danger btn-sm">Eliminar</a>
              <a href="/alumnos/<%= alumno.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
              <a href="/alumnos/<%= alumno.id %>" class="btn btn-info btn-sm ">Ver</a>
            </td>
          <% end %>




      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br><br><br><br><br>



